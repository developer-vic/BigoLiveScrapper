<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BigoLiveScrapper.Pages.JsonViewerPage"
             Title="JSON Viewer">

    <Grid RowDefinitions="Auto,*">
        <!-- Header with buttons -->
        <Border Grid.Row="0"
                BackgroundColor="{StaticResource Primary}"
                Padding="15,10">
            <Grid ColumnDefinitions="*,Auto,Auto"
                  ColumnSpacing="10">
                <Label
                    Grid.Column="0"
                    Text="JSON Viewer"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    VerticalOptions="Center"/>
                <Button
                    Grid.Column="1"
                    Text="ðŸ“‹ Copy"
                    Clicked="OnCopyClicked"
                    BackgroundColor="White"
                    TextColor="{StaticResource Primary}"
                    Padding="15,8"
                    FontSize="14"/>
                <Button
                    Grid.Column="2"
                    Text="âœ• Close"
                    Clicked="OnCloseClicked"
                    BackgroundColor="White"
                    TextColor="{StaticResource Primary}"
                    Padding="15,8"
                    FontSize="14"/>
            </Grid>
        </Border>

        <!-- WebView for pretty JSON display -->
        <WebView Grid.Row="1"
                 x:Name="JsonWebView"
                 HorizontalOptions="Fill"
                 VerticalOptions="Fill"/>
    </Grid>

</ContentPage>

