<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BigoLiveScrapper.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Margin="0,0,0,10"
            Padding="20,5"
            Spacing="0">

            <!-- Header -->
            <Label x:Name="AppTitleLabel"
                   Text="Bigo Live Scrapper"
                   Style="{StaticResource Headline}"
                   HorizontalOptions="Center"/>
            <Label Text="programmergwin.com"
                   TextColor="Blue"
                   Margin="0,0,0,10"
                   TextDecorations="Underline"
                   HorizontalOptions="End">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnWebsiteTapped"/>
                </Label.GestureRecognizers>
            </Label>

            <!-- View Status Button (shown after automation completes) -->
            <Button x:Name="ViewStatusBtn"
                    Text="📊 View Last Automation Status"
                    BackgroundColor="#5C7B8A"
                    TextColor="White"
                    HeightRequest="45"
                    Margin="0,10"
                    IsVisible="False"
                    Clicked="OnViewStatusClicked"/>

            <!-- Caption Display -->
            <Border
                Stroke="{StaticResource Primary}"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 10"
                Padding="15"
                IsVisible="False"
                x:Name="CaptionFrame"
                BackgroundColor="White">
                <VerticalStackLayout Spacing="10">
                    <Label
                        Text="Generated Caption:"
                        FontAttributes="Bold"
                        FontSize="16"
                        TextColor="{StaticResource Primary}"/>

                    <Border>
                        <Editor
                            x:Name="CaptionLabel"
                            Text=""
                            HeightRequest="100"
                            FontSize="14"/>
                    </Border>

                    <Button
                        Text="📋 Copy Caption"
                        Clicked="OnCopyCaptionClicked"
                        BackgroundColor="{StaticResource Primary}"
                        Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Border>

            <!-- Main Content Container - Hidden during automation -->
            <VerticalStackLayout x:Name="MainContentContainer"
                                 Spacing="20">
                <Grid ColumnDefinitions="*,*"
                      ColumnSpacing="10"
                      RowSpacing="10">
                    <!-- Accessibility Status -->
                    <Border Grid.RowSpan="2"
                            Grid.Column="0"
                            Stroke="#E0E0E0"
                            StrokeThickness="1"
                            BackgroundColor="White"
                            Padding="15,5">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Accessibility Status"
                                   FontAttributes="Bold"
                                   TextColor="#1F4F5B"/>
                            <Label x:Name="StatusLabel"
                                   Text="Checking..."
                                   FontAttributes="Bold"/>
                            <Button x:Name="EnableAccessibilityBtn"
                                    Text="Enable"
                                    TextColor="White"
                                    Clicked="OnEnableAccessibilityClicked"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Media Type Selection -->
                    <VerticalStackLayout Grid.Row="0"
                                         Grid.Column="1">
                        <!-- Media Preview -->
                        <Border
                            HeightRequest="80"
                            Stroke="{StaticResource Primary}"
                            StrokeThickness="2"
                            StrokeShape="RoundRectangle 10"
                            BackgroundColor="#F0F0F0">
                            <Image
                                x:Name="MediaPreview"
                                Aspect="AspectFit"/>
                        </Border>
                        <!-- Media Type Label -->
                        <Label x:Name="MediaTypeLabel"
                               Text="No media selected"
                               HorizontalOptions="Center"
                               FontSize="14"
                               TextColor="{StaticResource Gray600}"/>
                        <Button
                            Grid.Column="2"
                            Text="📁 Pick"
                            Clicked="OnPickMediaClicked"
                            BackgroundColor="{StaticResource Primary}"
                            FontSize="12"/>
                    </VerticalStackLayout>
                </Grid>

                <!-- Action Buttons -->
                <!-- <Grid ColumnDefinitions="*,*,*"
                      ColumnSpacing="10">
                    <Button
                        Grid.Column="0"
                        Text="📷 Photo"
                        Clicked="OnTakePhotoClicked"
                        BackgroundColor="{StaticResource Primary}"
                        FontSize="12"/>

                    <Button
                        Grid.Column="1"
                        Text="🎬 Video"
                        Clicked="OnTakeVideoClicked"
                        BackgroundColor="{StaticResource Tertiary}"
                        FontSize="12"/>

                    <Button
                        Grid.Column="2"
                        Text="📁 Pick"
                        Clicked="OnPickMediaClicked"
                        BackgroundColor="{StaticResource Primary}"
                        FontSize="12"/>
                </Grid> -->

                <!-- Loading Indicator -->
                <ActivityIndicator
                    x:Name="LoadingIndicator"
                    IsRunning="False"
                    IsVisible="False"
                    Color="{StaticResource Primary}"
                    HeightRequest="50"/>

                <!-- Generate Caption Button -->
                <Button
                    x:Name="GenerateCaptionBtn"
                    Text="✨ Generate Caption"
                    Clicked="OnGenerateCaptionClicked"
                    BackgroundColor="{StaticResource Tertiary}"
                    FontAttributes="Bold"/>

            </VerticalStackLayout>

            <!-- Automation Status -->
            <VerticalStackLayout
                x:Name="AutomationStatusContainer"
                IsVisible="False"
                Spacing="10">
                <Label
                    Text="Automation Status:"
                    FontSize="16"
                    FontAttributes="Bold"
                    TextColor="{StaticResource Primary}"/>

                <CollectionView
                    x:Name="StatusCollectionView"
                    ItemsSource="{Binding StatusItems}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Stroke="#E0E0E0"
                                StrokeThickness="1"
                                Margin="0,5,0,5"
                                Padding="10"
                                BackgroundColor="White">
                                <Grid ColumnDefinitions="40,*,100"
                                      ColumnSpacing="10">
                                    <Label
                                        Grid.Column="0"
                                        Text="{Binding Icon}"
                                        FontSize="24"
                                        VerticalOptions="Center"/>
                                    <VerticalStackLayout Grid.Column="1"
                                                         Spacing="2">
                                        <Label
                                            Text="{Binding Platform}"
                                            FontAttributes="Bold"
                                            FontSize="14"/>
                                        <Label
                                            Text="{Binding Message}"
                                            FontSize="10"
                                            TextColor="Gray"
                                            LineBreakMode="TailTruncation"/>
                                    </VerticalStackLayout>
                                    <Label
                                        Grid.Column="2"
                                        Text="{Binding Status}"
                                        TextColor="{Binding StatusColor}"
                                        FontAttributes="Bold"
                                        FontSize="12"
                                        HorizontalOptions="End"
                                        VerticalOptions="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <Button x:Name="ToggleAutomationBtn"
                    Text="🤖 Start Automation"
                    BackgroundColor="#1F4F5B"
                    TextColor="White"
                    Margin="0,10"
                    HeightRequest="50"
                    Clicked="OnToggleAutomationClicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
